<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wheresmybus.BusRouteCatalogFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_list"
        android:layout_below="@+id/favoriteSwitch"
        android:paddingBottom="60dp">
    </ListView>

    <Switch
            android:text="@string/view_favorite_routes_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favoriteSwitch"
            android:theme="@style/AppTheme.SwitchTheme"
            android:background="@color/white"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:switchPadding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"/>

</RelativeLayout>
