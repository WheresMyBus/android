<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wheresmybus.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find a forum for:"
            android:background="@color/lightBlue"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/button2"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

    <Button
        android:text="@string/submit_alert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="430dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:onClick="switchToSubmitAlert"
        android:textStyle="bold"/>

    <Button
        android:text="View Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:id="@+id/button2"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"/>

    <Button
            android:text="Bus Routes"
            android:textSize="20sp"
            android:id="@+id/button4"
            android:textColor="@color/white"
            android:onClick="switchToRouteCatalog"
            android:background="@drawable/bus_logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="55dp"
            android:textStyle="bold"
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:text="Neighborhoods"
            android:textSize="20sp"
            android:id="@+id/button3"
            android:textColor="@color/white"
            android:background="@drawable/neighborhood_logo"
            android:onClick="switchToNeighborhoodCatalog"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:layout_height="140dp"
            android:layout_width="240dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"/>

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/temporary_map_button"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        android:onClick="switchToMap" />

</RelativeLayout>