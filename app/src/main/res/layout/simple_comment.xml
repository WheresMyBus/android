<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/comment"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/thumbs_up"
        android:layout_toStartOf="@+id/thumbs_up"
        android:layout_alignBottom="@+id/num_thumbs_up"
        android:gravity="center_vertical" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/thumbs_down"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/thumbs_down"
        android:background="@android:color/transparent"
        android:tint="@android:color/darker_gray"
        android:layout_toRightOf="@+id/num_thumbs_up"
        android:layout_toEndOf="@+id/num_thumbs_up"
        android:contentDescription="thumbs_up_button" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbs_down"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/num_thumbs_down"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbs_up"
        android:layout_toLeftOf="@+id/num_thumbs_down"
        android:layout_toStartOf="@+id/num_thumbs_down"
        android:id="@+id/num_thumbs_up"
        android:textColor="@android:color/black"
        android:paddingRight="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/thumbs_up"
        android:id="@+id/thumbs_up"
        android:background="@android:color/transparent"
        android:tint="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/num_thumbs_up"
        android:layout_alignStart="@+id/num_thumbs_up"
        android:layout_toLeftOf="@+id/num_thumbs_down"
        android:layout_toStartOf="@+id/num_thumbs_down" />


</RelativeLayout>
