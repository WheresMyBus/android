<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.wheresmybus.BusRouteCatalogFragment"
        android:id="@+id/bus_route_catalog_fragment"
        tools:layout="@layout/fragment_bus_route_catalog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.wheresmybus.NeighborhoodCatalogFragment"
        android:layout_centerHorizontal="true"
        android:id="@+id/neighborhood_catalog_fragment"
        tools:layout="@layout/fragment_neighborhood_catalog"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>